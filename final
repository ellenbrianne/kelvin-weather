// today's forecast is 293 K
const kelvin = 293;

// celsius is 273 degrees < kelvin
var celsius = kelvin - 273;

// the equation C * (9/5) + 32 gives us F temp, which will need to be rounded
var fahrenheit = celsius * (9/5) + 32;

// resaved variable F as new rounded down value
// could go back and wrap initial var F in Math.floor() as well;
var fahrenheit = Math.floor(fahrenheit);

console.log(`The temperature is ${fahrenheit} degrees Fahrenheit.`);

// final answer should be 68 F.
// changing OG Kelvin temp to 0, final answer should be -460 F

// for xtra practice, convert C to Newton using N = C * (33/100), round N down using .floor(), use console.log and string interpolation to log temp in newton to console;

const Newton = Math.floor(celsius * (33 / 100));

console.log(`The temperature is ${Newton} degrees Fahrenheit.`);
